#!/usr/bin/env bash
set -euo pipefail

cd "$(dirname "$0")/.."

echo "=== Lint ==="
pipenv run python -m ruff check .
pipenv run python -m ruff format --check .

echo ""
echo "=== Type Check ==="
pipenv run python -m mypy boundary/ lib/ infra/ config.py

echo ""
echo "=== Tests ==="
pipenv run python -m pytest tests/ -v

echo ""
echo "=== All checks passed ==="
